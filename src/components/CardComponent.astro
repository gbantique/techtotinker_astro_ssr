---
import Tags from "./Tags.astro";

const { article } = Astro.props;

// interface Props {
//   article: CollectionEntry<"blogs">;
// }
---

<article>
  <div class="article-wrapper">
    <figure>
      <img src={"/images/" + article.data.image} alt="" />
    </figure>
    <div class="article-body">
      <h4>
        <a href={"/" + article.collection + "/" + article.slug}
          >{article.data.title}</a
        >
      </h4>
      <!-- <p>
        {article.body}
      </p> -->
      <p>{article.body.split(" ").slice(0, 20).join(" ")}</p>
      <a href={"/" + article.collection + "/" + article.slug} class="read-more">
        Read more <span class="sr-only">{article.data.title}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="icon"
          viewBox="0 0 20 20"
          fill="currentColor"
        >
          <path
            fill-rule="evenodd"
            d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z"
            clip-rule="evenodd"></path>
        </svg>
      </a>
      <br />
      <br />
      <Tags tags={article.data.tags} />
    </div>
  </div>
</article>
